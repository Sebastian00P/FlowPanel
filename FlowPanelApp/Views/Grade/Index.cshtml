@model IEnumerable<FlowPanelApp.Models.Grade>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/font-awesome/css/all.css" rel="stylesheet" />

</head>

<div class="return-section">
    <div>
        <h1>Oceny</h1>
    </div>
    <div class="float-right" style="padding: 5px">
        <button class="btn btn-secondary comeback-btn" onclick="location.href='@Url.Action("Index", "Course")'">
            <i class="fa-solid fa-arrow-left"></i>
        </button>
    </div>
</div>

<p>
    <a asp-action="Create">
        <div class="float-left" style="padding-bottom: 5px;">
            <input type="button" class="btn btn-primary" value="Dodaj nową ocenę" />
        </div>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Opis
            </th>
            <th>
                Ocena
            </th>
            <th>
                Data wpisu
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GradeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradeValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddDate)
            </td>
            <td style="vertical-align:middle;">                  
                <div class="float-right" style="padding: 5px">
                    <button class="btn btn-info comeback-btn" onclick="location.href='@Url.Action("Edit", "Grade", new { gradeId=item.GradeId })'">
                        <i class="fa-solid fa fa-pencil"></i>
                    </button>
                </div>  
                <div class="float-right" style="padding: 5px">
                    <button class="btn btn-danger comeback-btn" onclick="location.href='@Url.Action("DeleteGrade", "Grade", new { gradeId=item.GradeId })'">
                        <i class="fa-solid fa fa-trash"></i>
                    </button>
                </div> 
            </td>
        </tr>
    }
    </tbody>
</table>
<style>
    .return-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .comeback-btn {
        border-radius: 50%;
    }
</style>
