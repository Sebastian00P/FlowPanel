@model IEnumerable<FlowPanelApp.Models.Course>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kursy</h1>

<p>
    <a asp-action="Create">
        <div class="float-right" style="padding: 10px">
            <input type="button" class="btn btn-primary" value="Dodaj nowy kurs" />
        </div>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa kursu
            </th>          
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td> 
            <td style="vertical-align:middle;">                  
                <div class="float-right" style="padding: 5px">
                        <input type="button" class="btn btn-info" value="Edytuj" onclick="location.href='@Url.Action("Edit", "Course", new { courseId=item.CourseId })'" />
                </div>
                <div class="float-right" style="padding: 5px">
                        <input type="button" class="btn btn-secondary" value="Oceny" onclick="location.href='@Url.Action("CourseDetails", "Course", new { courseId=item.CourseId })'" />
                </div>                     
            </td>     
        </tr>
    }
    </tbody>
</table>
