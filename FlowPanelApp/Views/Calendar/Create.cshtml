@model FlowPanelApp.Models.StudentCalendar.CreateLessonViewModel.CreateLessonViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Lesson</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateLesson">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Dzień</label>
                <select asp-for="Lesson.Day" class="form-control">
                    @foreach (var day in Enum.GetValues(typeof(DayOfWeek)))
                    {
                        <option value="@day">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetDayName((DayOfWeek)day)</option>
                    }
                </select>
                <span asp-validation-for="Lesson.Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Początek zajęć</label>
                <input asp-for="Lesson.StartTime" type="time" class="form-control" />
                <span asp-validation-for="Lesson.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Koniec zajęć</label>
                <input asp-for="Lesson.EndTime" type="time" class="form-control" />
                <span asp-validation-for="Lesson.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Przedmiot</label>
                <select asp-for="Lesson.NameOfSubject" class="form-control">
                    @foreach (var course in Model.Courses)
                    {                       
                        <option value="@course">@course</option>
                    }
                </select>
                <span asp-validation-for="Lesson.NameOfSubject" class="text-danger"></span>
            </div>         
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
