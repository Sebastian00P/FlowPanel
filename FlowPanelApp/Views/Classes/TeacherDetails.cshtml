@model FlowPanelApp.Models.Teacher

@{
    ViewData["Title"] = "TeacherDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/font-awesome/css/all.css" rel="stylesheet" />

</head>

<div class="return-section">
    <div>
        <h1>Dane opiekuna</h1>
    </div>
    <div class="float-right" style="padding: 5px">
        <button class="btn btn-secondary comeback-btn" onclick="location.href='@Url.Action("Index", "Classes")'">
            <i class="fa-solid fa-arrow-left"></i>
        </button>
    </div>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Imię
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Nazwisko
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            Adres zamieszkania
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            Pesel
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pesel)
        </dd>
        <dt class = "col-sm-2">
            Wiek
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class = "col-sm-2">
            Zdjęcie
        </dt>
        <dd class = "col-sm-10">
            @{
                string base64Image = Convert.ToBase64String(Model.Picture);
                <img src="data:image/png;base64, @base64Image" width="100" />
            }
        </dd>
    </dl>
</div>
<div>
    <button class="btn btn-info comeback-btn" onclick="location.href='@Url.Action("EditViewTeacher", "Classes", new { classId=Model.ClassId })'">
        <i class="fa-solid fa fa-pencil"></i>
    </button>
</div>


<style>
    .comeback-btn {
        border-radius: 50%;
    }

    .return-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>