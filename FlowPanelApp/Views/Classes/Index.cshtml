@model IEnumerable<FlowPanelApp.Models.ClassModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Klasy</h1>

<p>
    <a asp-action="Create">
        <div class="float-right" style="padding: 10px">
            <input type="button" class="btn btn-primary" value="Dodaj nową klasę" />
        </div>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa klasy
            </th>
            <th>
                Nazwa szkoły
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClassName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.school.SchoolName)
            </td>
            <td>

            </td>
            <td style="vertical-align:middle;">                  
                <div class="float-right" style="padding: 5px">
                        <input type="button" class="btn btn-info" value="Edytuj" onclick="location.href='@Url.Action("Edit", "Classes", new { ClassId=item.ClassId })'" />
                </div>
                <div class="float-right" style="padding: 5px">
                        <input type="button" class="btn btn-secondary" value="Studenci" onclick="location.href='@Url.Action("ClassDetails", "Classes", new { ClassId=item.ClassId })'" />
                </div>                     
            </td>          
        </tr>
    }
    </tbody>
</table>
