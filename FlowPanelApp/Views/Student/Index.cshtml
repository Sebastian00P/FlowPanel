@model IEnumerable<FlowPanelApp.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Studenci</h1>

<p>
    <a asp-action="Create">Dodaj studenta</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Imie
            </th>
            <th>
                Nazwisko
            </th>
            <th>
                Wiek
            </th>
            <th>
                Pesel
            </th>
            <th>
                Adres
            </th>          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pesel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
           
            <td>
                    @Html.ActionLink("Edytuj", "Edit", new { studentId=item.StudentId }) |
                    @Html.ActionLink("Kursy", "StudentDetails", new { studentId=item.StudentId }) |
                <a asp-action="Delete" asp-route-id="@item.StudentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
