@model FlowPanelApp.Models.Student

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/font-awesome/css/all.css" rel="stylesheet" />

</head>

<div class="return-section">
    <div>
        <h1>Dodaj nowego studenta</h1>
    </div>
    <div class="float-right" style="padding: 5px">
        <button class="btn btn-secondary comeback-btn" onclick="location.href='@Url.Action("Index", "Student")'">
            <i class="fa-solid fa-arrow-left"></i>
        </button>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNewStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Imię</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nazwisko</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Wiek</label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Pesel</label>
                <input asp-for="Pesel" class="form-control" />
                <span asp-validation-for="Pesel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Adres zamieszkania</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>          
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .comeback-btn {
        border-radius: 50%;
    }

    .return-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>