@model FlowPanelApp.Models.School

@{
    ViewData["Title"] = "EditSchool";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/font-awesome/css/all.css" rel="stylesheet" />

</head>

<div class="return-section">
    <div>
        <h1>Dodaj szkołę</h1>
    </div>
    <div class="float-right" style="padding: 5px">
        <button class="btn btn-secondary comeback-btn" onclick="location.href='@Url.Action("Index", "School")'">
            <i class="fa-solid fa-arrow-left"></i>
        </button>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateSchool" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SchoolId" />
            <div class="form-group">
                <label class="control-label">Nazwa szkoły</label>
                <input asp-for="SchoolName" class="form-control" />
                <span asp-validation-for="SchoolName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Adres szkoły</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Logo szkoły</label>
                <input asp-for="Logo" type="file" name="file" class="form-control" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .comeback-btn {
        border-radius: 50%;
    }

    .return-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>
